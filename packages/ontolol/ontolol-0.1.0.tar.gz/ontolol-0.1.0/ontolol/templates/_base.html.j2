    <main>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
    </main>

    <footer class="footer has-background-light has-text-dark">
        <div class="columns">
            <div class="column">
                Ontology website built with <a href="https://codeberg.org/Chocorize/ontolol">ontolol</a>
            </div>
            <div class="column">
                {{ repo.root.metadata.comment[0] }}
