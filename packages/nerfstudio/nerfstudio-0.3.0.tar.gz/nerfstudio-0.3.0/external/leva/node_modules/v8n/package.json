{
  "name": "v8n",
  "version": "1.3.3",
  "description": "Dead simple fluent JavaScript validation library",
  "main": "./dist/v8n.cjs.js",
  "module": "./dist/v8n.esm.js",
  "jsdelivr": "./dist/v8n.min.js",
  "unpkg": "./dist/v8n.min.js",
  "files": [
    "dist/",
    "src/",
    "docs/"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint ./src",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "build": "rimraf -r dist && rollup -c",
    "deploy": "yarn build && npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "javascript",
    "validation",
    "library"
  ],
  "author": "Bruno C. Couto <brunodev02221@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imbrn/v8n.git"
  },
  "bugs": {
    "url": "https://github.com/imbrn/v8n/issues"
  },
  "homepage": "https://github.com/imbrn/v8n#readme",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.1",
    "husky": "^1.0.0-rc.9",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "rimraf": "^2.6.2",
    "rollup": "^0.62.0",
    "rollup-plugin-babel": "^3.0.5",
    "rollup-plugin-uglify": "^4.0.0",
    "vuepress": "^0.12.0"
  }
}
